<?xml version='1.0' encoding='utf-8'?>
<widget id="io.melle.dealspace" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DG Cleaning Services</name>
    <description>
        Philadelphia Area Cleaning Services
    </description>
    <author email="l@emelle.me" href="http://cordova.io">
        -melle.io-
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-network-information" />
    <plugin name="cordova-plugin-inappbrowser" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res/icon-small.png" width="40" height="40"/>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
    </platform>
    <preference name="orientation" value="portrait" />
    <engine name="android" spec="~5.1.1" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- you can use any density that exists in the Android project -->

        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <!-- iPhone 6 / 6+ -->
        
    </platform>
</widget>
